// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.vscode": true,
    "**/CVS": true,
    "**/coverage": true,
    "**/dist": true,
    "**/*.bak": true
  },
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "html.format.wrapLineLength": 140
}
