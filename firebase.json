{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/bc1/**",
        "destination": "https://blockchain.info",
        "type": 301
      },
      {
        "source": "/samplerest/**",
        "destination": "https://jsonplaceholder.typicode.com",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}